{
  "name": "DSAUtilities",
  "version": "1.0.0",
  "description": "An RPG digital whiteboard",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "build --dir",
    "dist": "build",
    "dist-mac": "build --mac",
    "dist-linux": "build --linux"
  },
  "repository": "https://github.com/ItsCoding/DSAUtilities",
  "homepage": "https://github.com/ItsCoding/DSAUtilities",
  "keywords": [
    "DSA5",
    "DSA",
    "whiteboard",
    "digital",
    "rpg"
  ],
  "author": "Alexander Quadtr <10713197+ItsCoding@users.noreply.github.com> https://github.com/ItsCoding",
  "license": "Mozilla Public License 2.0",
  "devDependencies": {
    "electron": "^3.0.3",
    "electron-builder": "^20.39.0",
    "electron-winstaller": "^2.7.0"
  },
  "dependencies": {
    "electron-config": "^2.0.0",
    "electron-store": "^2.0.0",
    "merge-images": "^1.1.0",
    "object-sizeof": "^1.3.0"
  },
  "build": {
    "appId": "DSAUtilities",
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": "NSIS",
      "icon": "resources/dsaicon.ico"
    }
  }
}
